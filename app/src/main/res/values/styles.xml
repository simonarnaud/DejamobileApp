<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryDark">@color/button_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/button_color</item>
        <item name="colorControlActivated">@color/button_color</item>
        <item name="colorControlHighlight">@color/button_color</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/ic_card</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="card_back">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/ic_card_back</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
